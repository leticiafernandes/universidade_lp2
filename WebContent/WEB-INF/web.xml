<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Universidade_LPII</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>

<servlet>
	<servlet-name>InserirPessoa</servlet-name>
    <servlet-class>controller.PessoaAction</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>InserirPessoa</servlet-name>
    <url-pattern>/InserirPessoa</url-pattern>
</servlet-mapping>

<servlet>
	<servlet-name>ListarPessoa</servlet-name>
    <servlet-class>controller.PessoaAction</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>ListarPessoa</servlet-name>
    <url-pattern>/ListarPessoa</url-pattern>
</servlet-mapping>

<servlet>
	<servlet-name>InserirTurma</servlet-name>
    <servlet-class>controller.TurmaAction</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>InserirTurma</servlet-name>
    <url-pattern>/InserirTurma</url-pattern>
</servlet-mapping>

<servlet>
	<servlet-name>ListarTurmas</servlet-name>
    <servlet-class>controller.TurmaAction</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>ListarTurmas</servlet-name>
    <url-pattern>/ListarTurmas</url-pattern>
</servlet-mapping>

</web-app>